  <script>
    // Book search: Uses world’s largest open/free book APIs (meta search), and provides language translation via Google Translate preview
    const openBookLinks = [
      {title: "Dhammapada (English)", url: "https://www.gutenberg.org/ebooks/201"},
      {title: "Bhagavad Gita (English)", url: "https://www.gutenberg.org/ebooks/2388"},
      {title: "Hamlet - Shakespeare", url: "https://www.gutenberg.org/ebooks/1524"},
      {title: "Astrology Collection", url: "https://www.sacred-texts.com/astro/index.htm"},
      {title: "HolyBooks - Astrology", url: "https://www.holybooks.com/category/astrology/"},
      {title: "Gutenberg - Astrology Books", url: "https://www.gutenberg.org/ebooks/search/?query=astrology"},
      {title: "Internet Archive - Books", url: "https://archive.org/details/texts"},
      {title: "Open Library - Search", url: "https://openlibrary.org/search?q=astrology"}
      // add more static links as fallback
    ];

    function searchBooks() {
      const query = document.getElementById('searchInput').value.trim();
      const resultsDiv = document.getElementById('bookResults');
      const translateFrame = document.getElementById('translateFrame');
      resultsDiv.innerHTML = '';
      translateFrame.style.display = 'none';

      if (!query) {
        resultsDiv.innerHTML = "<span style='color:#999'>Please enter a book title.</span>";
        return;
      }

      // For demonstration: Show matching static books first
      let found = false;
      let html = '<div class="book-list">';
      openBookLinks.forEach(book => {
        if (book.title.toLowerCase().includes(query.toLowerCase())) {
          found = true;
          html += `<a class="book-card" href="#" onclick="previewBook('${encodeURIComponent(book.url)}','${encodeURIComponent(book.title)}');return false;">${book.title}</a>`;
        }
      });

      html += '</div>';
      if (!found) {
        // Show meta search links (global free book search)
        html = `<div class="book-list">
          <a class="book-card" href="#" onclick="searchGlobalSite('gutenberg','${encodeURIComponent(query)}');return false;">Search Gutenberg</a>
          <a class="book-card" href="#" onclick="searchGlobalSite('openlib','${encodeURIComponent(query)}');return false;">Search Open Library</a>
          <a class="book-card" href="#" onclick="searchGlobalSite('archive','${encodeURIComponent(query)}');return false;">Search Internet Archive</a>
          <a class="book-card" href="#" onclick="searchGlobalSite('holybooks','${encodeURIComponent(query)}');return false;">Search HolyBooks</a>
          </div>
          <div style="color:#888;margin-top:1em;">Searching all world free books. Click a button above to find your book.</div>`;
      }
      resultsDiv.innerHTML = html;
    }

    function previewBook(url, title) {
      // Direct preview + translation offer
      const bookUrl = decodeURIComponent(url);
      const bookTitle = decodeURIComponent(title);
      // Offer language selection for translation
      let lang = prompt('Translate book to which language? (si=සිංහල, ta=தமிழ், hi=हिन्दी, en=English, etc.)', 'si');
      if (!lang) lang = 'si';
      // Google Translate docs preview
      const translateUrl = `https://translate.google.com/website?sl=auto&tl=${lang}&u=${encodeURIComponent(bookUrl)}`;
      const frame = document.getElementById('translateFrame');
      frame.src = translateUrl;
      frame.style.display = 'block';
      frame.scrollIntoView({behavior: 'smooth'});
    }

    function searchGlobalSite(site, query) {
      let url = '';
      query = decodeURIComponent(query);
      if (site === 'gutenberg') url = `https://www.gutenberg.org/ebooks/search/?query=${encodeURIComponent(query)}`;
      else if (site === 'openlib') url = `https://openlibrary.org/search?q=${encodeURIComponent(query)}`;
      else if (site === 'archive') url = `https://archive.org/search?query=${encodeURIComponent(query)}`;
      else if (site === 'holybooks') url = `https://www.holybooks.com/?s=${encodeURIComponent(query)}`;
      window.open(url, '_blank');
    }
  </script>
</body>
</html>
