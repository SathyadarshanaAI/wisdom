  <div class="container">
    <h1>Sathyadarshana Library</h1>
    <div class="search-row">
      <input type="text" id="searchInput" class="search-bar" placeholder="Book title (e.g. Dhammapada, Bhagavad Gita, Hamlet...)" />
      <button class="search-btn" onclick="searchBooks()">Search</button>
    </div>
    <div id="bookResults" class="book-results"></div>
